  <button class="my_clip_button btn btn-primary red darken-3" data-clipboard-target="fe_text" data-clipboard-text="Default clipboard text from attribute" id="d_clip_button" title="Copy to Clipboard">
    Copy Link
  </button>

  <textarea cols='50' id='fe_text' rows='3'>Copy me!</textarea>

